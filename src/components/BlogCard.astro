---
const { post } = Astro.props;

// console.log(post);

const timeStamp = new Date(post.frontmatter.pubDate).toLocaleDateString(
  "en-us",
  {
    year: "numeric",
    month: "short",
    day: "numeric",
  }
);
---

<a class="card" href={post.url}>
  <div>
    {
      post.frontmatter.heroImage && (
        <div class="hero">
          <img
            loading="lazy"
            src={post.frontmatter.heroImage}
            alt="hero image"
          />
        </div>
      )
    }
    <div class="body">
      <time datetime={post.frontmatter.pubDate}>{timeStamp}</time>
      <h1 class="title">{post.frontmatter.title}</h1>
    </div>
  </div>
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    justify-content: end;
    width: 100%;
  }
  .hero {
    width: 100%;
    height: 200px;
  }
  img {
    width: 100%;
    height: inherit;
    object-fit: cover;
    object-position: center;
    border-radius: 1rem;
  }
  .body {
    padding: 2rem;
    min-height: 165px;
  }
  h1 {
    font-size: max(1.4rem, 0.5vw);
  }
  time {
    font-size: 0.8rem;
    color: pink;
  }
  h1,
  time {
    text-align: center;
    display: block;
    max-inline-size: none;
  }
</style>
