---
import Paragraphs from "./Paragraphs.astro";

const { title, description } = Astro.props;
---

<div class="wrapper">
  <div class="container">
    <div class="title"><h2>{title}</h2></div>
    <div class="body"><Paragraphs text={description} /></div>
  </div>
</div>

<style>
  .wrapper {
    min-height: min(800px, 160vw);
    margin: 8rem 2rem 0 2rem;

    padding: 4vw;
    padding-top: 10vw;
    border-top: 1px solid #ccc;
  }
  .container {
    display: flex;
    flex-wrap: wrap;
  }
  .title {
    flex: 2;
    min-width: 250px;
    background-position: center center;
    background-size: cover;
  }
  .title h2 {
    text-align: right;
    padding-bottom: 10vw;
  }
  .title img {
    padding-top: 1rem;
    width: 50%;
    margin: auto;
  }

  .body {
    flex: 3;
    padding: min(2rem, 4vw);
    padding-top: 0;
    min-width: 350px;
  }
  .body :global(p) {
    padding: 1rem;
  }
</style>
