---
import Paragraphs from "./Paragraphs.astro";

let { title, description } = Astro.props;
title = title.replace(/\n/g, "<br/>");
---

<div class="wrapper">
  <div class="container">
    <div class="title"><h2 set:html={title} /></div>
    <div class="body"><Paragraphs text={description} /></div>
  </div>
</div>

<style>
  .wrapper {
    margin: 2rem;
    padding: 4vw;
    padding-top: 6vw;
  }
  .container {
    display: flex;
    flex-wrap: wrap;
  }
  .title {
    flex: 2;
    min-width: 250px;
    background-position: center center;
    background-size: cover;
  }
  .title h2 {
    text-align: right;
    padding-bottom: 10vw;
  }
  .title img {
    padding-top: 1rem;
    width: 50%;
    margin: auto;
  }

  .body {
    flex: 3;
    padding: min(2rem, 4vw);
    padding-top: 0;
    min-width: 300px;
  }
</style>
