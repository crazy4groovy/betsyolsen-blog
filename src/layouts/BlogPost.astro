---
import BaseHead from "../components/BaseHead.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    author?: string;
    pubDate?: string;
    heroImage?: string;
    tags?: string[];
  };
}

const {
  frontmatter: { title, pubDate, heroImage, tags },
} = Astro.props as Props;

const timeStamp = pubDate
  ? new Date(pubDate).toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  : null;
---

<html lang="en">
  <head>
    <BaseHead title={title} description="Blog Post" />
  </head>

  <body>
    <div class="nav-box">
      <Nav />
    </div>

    <article>
      <h1>{title}</h1>

      {heroImage && <img class="hero" src={heroImage} alt="" />}

      {timeStamp && <time>{timeStamp}</time>}

      <div class="hr"></div>
      <hr />

      <slot /><!-- Article Post inserted here -->

    </article>

    <Footer />
    <style>
      .nav-box {
        display: flex;
        padding: min(2rem, 4vw);
        padding-right: min(6rem, 4vw);
      }
      .nav-box > div {
        flex: 1;
      }
      :global(nav) {
        max-width: 560px;
        flex: 1;
      }
      article {
        max-width: 900px;
        margin: auto;
      }
      img.hero {
        width: 100%;
        max-height: 500px;
        object-fit: cover;
        object-position: top;
      }
      h1 {
        max-inline-size: none;
        padding: 2rem;
        font-size: min(3.5rem, 8vw);
      }
      time {
        display: block;
        text-align: center;
        color: turquoise;
        padding: 1rem;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
      div.hr {
        color: blue;
        width: 100%;
        height: 90px;
        background-image: url(/images/triple-hearts.jpg);
        background-position: center center;
        opacity: 0.8;
      }
    </style>
  </body>
</html>
